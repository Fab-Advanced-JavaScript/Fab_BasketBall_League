<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head'); %>
<body>
    <%- include('../partials/header'); %>

     <!--table-->
     <div class="searches-tables-container">

        <div class="title-search-container">
            <div id="playersh2">
                <h2>All Players</h2>
            </div>

            <div>
                <input type="text" id="searchPlayer" placeholder="Search Players ....">
            </div>
        </div>

        <div>
            <hr>
        </div>
        <!--dropdown container-->
        <div class="dropdown-container">
            <div class="dropdown-players">
                <select name="cars" id="players">
                    <option value="volvo">All players</option>
                    <option value="saab">Saab</option>
                    <option value="opel">Opel</option>
                    <option value="audi">Audi</option>
                </select>
            </div>
            <div class="dropdown-teams">
                <select name="cars" id="teams">
                    <option value="volvo">All Teams</option>
                    <option value="saab">Saab</option>
                    <option value="opel">Opel</option>
                    <option value="audi">Audi</option>
                </select>
            </div>
            <div class="dropdown-positions">
                <select name="cars" id="positions">
                    <option value="volvo">All positions</option>
                    <option value="saab">Saab</option>
                    <option value="opel">Opel</option>
                    <option value="audi">Audi</option>
                </select>
            </div>
            <div class="dropdown-colleges">
                <select name="Colleges" id="college">
                    <option value="volvo">All Colleges</option>
                    <option value="saab">Saab</option>
                    <option value="opel">Opel</option>
                    <option value="audi">Audi</option>
                </select>
            </div>
            <div class="dropdown-countries">
                <select name="cars" id="countries">
                    <option value="volvo">All Countries</option>
                    <option value="saab">Saab</option>
                    <option value="opel">Opel</option>
                    <option value="audi">Audi</option>
                </select>
            </div>
        </div>
        <br><br>
       
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">PLAYERS</th>
                    <th scope="col" >TEAN</th>
                    <th scope="col">NUMBER</th>
                    <th scope="col">POSITION</th>
                    <th scope="col">HEIGHT</th>
                    <th scope="col">WEIGHT</th>
                    <th scope="col">LAST ATTENTED</th>
                    <th scope="col">COUNTRY</th>
                </tr>
            </thead>
            <tbody id="playerinfos">
                <!--table body goes here-->
            </tbody>
        </table>
    </div>
<!-- external js file-->
<script src="js/fbl_players.js" charset="utf-8"></script>
</body>
</html>