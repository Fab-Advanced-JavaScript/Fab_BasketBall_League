        <div class="section-container">
            <section id="col2" class="column" >
                <div id="title">
                    <h2>Fab BasketBall Quiz</h2>
                </div>
                    <div id="quiz">
                       <!--quesiton goes here-->
                    </div>
                        <div class="multiOption">
                         <!--Multiple answer goes here-->
                        </div >
                         <div class="btncontainer">
                            <button type="button" id='prev' >Previous</button>
                            <button type="button" id='next' >Next</button><br>
                            <button type="button" id='submit' class="hidden">Submit</button>
                        </div>
            </section>
            <!-- display other sections and div tags here-->
        </div>
       
           <!--display result-->
    </main>
