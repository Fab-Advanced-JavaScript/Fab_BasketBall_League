 <!---Login section-->
 <div class="form-container">
    <% if (message) { %>
      <div class="alert alert-danger col-sm-12"><%= message %></div>
   <% } %>
    <form class="form-signin" action = "/login" method = "POST">
        <img class="mb-4 accountImg" src="/images/account_circle-24px.svg" alt="" width="72" height="72">
        <label for="email" class="sr-only">Email</label>
        <input type="text" id="inputEmail" class="form-control" placeholder="Enter Email" name="email">
        <br>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Enter Password" name="password">
        <br>
        <button class="btn btn-lg btn-dark btn-block" type="submit">Sign in</button>
        <hr>
    </form>
      <!-- sign up section-->
      <div class="form-group">
        <!-- Button -->                                       
        <div class="col-md-offset-3 col-md-9">
            <span for="">Don't have an account!</span>
            <button id="btn-signup" type="submit" class="btn btn-dark "><i class="icon-hand-right"></i>Sign Up</button>
            <hr>
            <label for="">Forgot Password?</label>
        </div>
    </div>
 </div>
<!-- js file -->
<script>
const signBtn = document.querySelector('#btn-signup');
signBtn.addEventListener('click', () => {
    window.location.href = "/signup"; 
});
</script>  