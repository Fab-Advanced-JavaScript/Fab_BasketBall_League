 <!---Login section-->
 <form class="form-signin">
    <img class="mb-4 accountImg" src="/images/account_circle-24px.svg" alt="" width="72" height="72">
    <label for="Username" class="sr-only">Username</label>
    <input type="text" id="inputUsername" class="form-control" placeholder="Enter Username" required="" autofocus="">
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Enter Password" required="">
    <button class="btn btn-lg btn-dark btn-block" type="submit">Sign in</button>
    <hr>
    <!-- sign up section-->
    <div class="form-group">
        <!-- Button -->                                       
        <div class="col-md-offset-3 col-md-9">
            <span for="">Don't have an account!</span>
            <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Sign Up</button>
            <hr>
            <label for="">Forgot Password?</label>
        </div>
    </div>
  </form>