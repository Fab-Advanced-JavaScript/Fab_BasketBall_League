<div class="form-container">
  <% if (message) { %>
    <div class="alert alert-danger col-sm-12"><%= message %></div>
 <% } %>
<form class="form-horizontal formstyle" action="signup" method="POST">
    <fieldset>
      <div id="legend">
        <legend class="">Create a new Account</legend>
      </div>
      <hr>
      <div class="control-group">
        <!-- firstname -->
        <div class="controls">
          <input type="text" id="first_name" name="first_name" placeholder="First Name" class="input-xlarge">
        </div>
      </div> <br>

      <div class="control-group">
        <!-- lastname -->
        <div class="controls">
          <input type="text" id="last_name" name="last_name" placeholder="Last Name" class="input-xlarge">
        </div>
      </div><br>
   
      <div class="control-group">
        <!-- E-mail -->
        <div class="controls">
          <input type="text" id="email" name="email" placeholder="Email" class="input-xlarge">
        </div>
      </div><br>
   
      <div class="control-group">
        <!-- Password-->
        <div class="controls">
          <input type="password" id="password" name="password" placeholder="Password" class="input-xlarge">
        </div>
      </div> <br>
   
      <div class="control-group">
        <!-- Password -->
        <div class="controls">
          <input type="password" id="password_confirm" name="password_confirm" placeholder="Re-type Password" class="input-xlarge">
        </div>
      </div>
      <hr>
   
      <div class="control-group">
        <!-- Button -->
        <div class="controls">
          <button class="btn btn-dark">Register</button>
</div>